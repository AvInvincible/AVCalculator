<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.avinc.avcalculator.MainActivity">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    android:orientation="vertical"
    android:visibility="visible">


    <TableRow>
        <EditText
            android:id="@+id/sourceOut"
            android:textSize="30dp"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="60dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:cursorVisible="false"
            android:background="@drawable/editapp_style"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/back"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="←"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>
        <Button
            android:id="@+id/cancel"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="C"
            android:layout_margin="10px"
            android:background="@drawable/cancel_button_style"/>
        <Button
            android:id="@+id/squRoot"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="√a"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>
        <Button
            android:id="@+id/cubRoot"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=" 3√a"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/mod"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Mod"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>
        <Button
            android:id="@+id/per"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="%"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>
        <Button
            android:id="@+id/mul"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="*"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>
        <Button
            android:id="@+id/div"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="/"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/seven"
            android:layout_margin="10px"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:id="@+id/eight"
            android:layout_margin="10px"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8"/>
        <Button
            android:id="@+id/nine"
            android:layout_margin="10px"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="9"/>
        <Button
            android:id="@+id/minus"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/four"
            android:layout_margin="10px"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"/>
        <Button
            android:id="@+id/five"
            android:layout_margin="10px"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"/>
        <Button
            android:id="@+id/six"
            android:layout_margin="10px"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6"/>
        <Button
            android:id="@+id/plush"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/one"
            android:layout_margin="10px"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"/>
        <Button
            android:id="@+id/two"
            android:layout_margin="10px"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2"/>
        <Button
            android:id="@+id/three"
            android:layout_margin="10px"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"/>
        <Button
            android:id="@+id/zero"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:layout_margin="10px"
            android:background="@drawable/button_style"/>

    </TableRow>

    <TableRow
        android:layout_marginTop="0dp">
        <ImageView
            android:id="@+id/AVLogo"
            android:layout_height="100dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/logo"/>
        <Button
            android:id="@+id/result"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="="
            android:background="@drawable/button_style"/>

    </TableRow>

</TableLayout>
</ScrollView>
